@using E_Commerce.Models.Home;
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

<h2>Your Cart</h2>
@if (Session["cart"] == null)
{
    <div class="alert alert-danger">
        <strong>No product added to cart!</strong>
    </div>

}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Add</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Item item in (List<Item>)Session["cart"])
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a class="txt-decor-none" href="@Url.Action("IncreaseQty", "Home", new { productId = item.Product.ProductId })">
                            <i class="fa fa-plus"></i>
                        </a>
                        <a class="txt-decor-none" href="@Url.Action("DecreaseQty", "Home", new { productId = item.Product.ProductId })">
                            <i class="fa fa-minus"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    if (((List<Item>)Session["cart"]).Any())
    {
        <a class="btn btn-secondary" href="@Url.Action("CheckoutDetails","Home")">Checkout</a>
    }

}

</div>